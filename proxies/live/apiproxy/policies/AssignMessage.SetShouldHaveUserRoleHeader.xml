<AssignMessage continueOnError="false" enabled="true" name="AssignMessage.SetShouldHaveUserRoleHeader">
  <AssignVariable>
    <Name>should-have-user-role-header</Name>
    <Value>false</Value>
  </AssignVariable>
  <AssignVariable>
    <Name>should-have-user-role-header</Name>
    <Value>true</Value>
    <Condition>(access-mode Equals "user-restricted") and apim-app-flow-vars.pds.app-restricted.update IsNot "true"</Condition>
  </AssignVariable>
</AssignMessage>
